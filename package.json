      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.1",
    "esbuild-loader": "^2.19.0",
    "html-webpack-plugin": "^5.5.0",
    "nodemon": "^2.0.19",
    "serve": "^13.0.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
